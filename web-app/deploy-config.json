{
  "name": "travel-planner-web",
  "version": "1.0.0",
  "description": "轻量旅行规划网页版应用部署配置",
  "deployment": {
    "vercel": {
      "buildCommand": "echo 'No build needed for static site'",
      "outputDirectory": ".",
      "rewrites": [
        {
          "source": "/(.*)",
          "destination": "/index.html"
        }
      ]
    },
    "netlify": {
      "buildCommand": "echo 'Building static site'",
      "publish": ".",
      "functions": {},
      "redirects": [
        {
          "from": "/*",
          "to": "/index.html",
          "status": 200
        }
      ]
    },
    "github-pages": {
      "source": ".",
      "branch": "gh-pages",
      "cname": null
    },
    "aliyun-oss": {
      "bucket": "travel-planner-web",
      "region": "oss-cn-hangzhou",
      "domain": "travel-planner.oss-cn-hangzhou.aliyuncs.com"
    }
  },
  "environment": {
    "production": {
      "supabaseUrl": "https://your-project.supabase.co",
      "supabaseKey": "your-production-key"
    },
    "development": {
      "supabaseUrl": "https://your-project.supabase.co",
      "supabaseKey": "your-development-key"
    }
  },
  "pwa": {
    "name": "轻量旅行规划",
    "short_name": "旅行规划",
    "description": "专为大学生设计的轻量化旅行规划应用",
    "theme_color": "#007bff",
    "background_color": "#ffffff",
    "display": "standalone",
    "orientation": "portrait",
    "scope": "/",
    "start_url": "/",
    "icons": [
      {
        "src": "/assets/icons/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "/assets/icons/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  }
}